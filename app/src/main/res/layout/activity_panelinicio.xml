<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".panelinicio"
    android:orientation="vertical"
    android:background="#009bff">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_margin="1dp"
        android:columnCount="3"
        android:rowCount="2">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/usuariov"
            android:layout_marginTop="17dp"
            android:layout_marginStart="15dp">
        </ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre del usuario"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/white"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="20sp">
        </TextView>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/dd"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:layout_row="0"
            android:layout_column="2">
        </ImageView>

        <Button
            android:id="@+id/btncerrarsesion"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_row="1"
            android:layout_column="1"
            android:text="CERRAR SESION"
            android:backgroundTint="#ff0000">

        </Button>

        <ImageView
            android:background="@drawable/cerrarsesion"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            >

        </ImageView>

    </GridLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/black"
        app:cardCornerRadius="30dp"
        android:layout_marginTop="10dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:columnCount="2"
            android:rowCount="3">

            <androidx.cardview.widget.CardView
                android:layout_row="0"
                android:layout_column="0"
                android:background="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/clientes"
                        android:layout_gravity="center"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CLIENTES"
                        android:textAlignment="center"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_row="0"
                android:layout_column="1"
                android:background="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/ventas"
                        android:layout_gravity="center"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="VENTAS"
                        android:textAlignment="center"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_row="1"
                android:layout_column="0"
                android:background="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/productos"
                        android:layout_gravity="center"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PRODUCTOS"
                        android:textAlignment="center"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_row="1"
                android:layout_column="1"
                android:background="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/configuraciones"
                        android:layout_gravity="center"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CONFIGURACIONES"
                        android:textAlignment="center"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_row="2"
                android:layout_column="0"
                android:background="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/pagos"
                        android:layout_gravity="center"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PAGOS"
                        android:textAlignment="center"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_row="2"
                android:layout_column="1"
                android:background="@color/white"
                android:layout_width="150dp"
                android:layout_marginEnd="30dp"
                app:cardCornerRadius="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_margin="10dp"
                    >

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:background="@drawable/reportes"
                        android:layout_gravity="center"
                        >
                    </ImageView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="REPORTES"
                        android:textAlignment="center"
                        android:textStyle="bold">

                    </TextView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>