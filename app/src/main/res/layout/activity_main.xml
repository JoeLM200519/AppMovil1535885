<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo_total"
    android:orientation="vertical">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/dd"
        android:layout_marginStart="240dp"
        android:layout_marginTop="55dp"
        >
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/azul"
        android:text="@string/login"
        android:textSize="50sp"
        android:textStyle="bold"
        >

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="65dp"
        android:textColor="@color/azul"
        android:text="@string/username"
        android:textSize="15sp"
        android:textStyle="bold"
        >
    </TextView>

    <EditText
        android:id="@+id/txtEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        >
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="35dp"
        android:textColor="@color/azul"
        android:text="@string/passwordtitulo"
        android:textSize="15sp"
        android:textStyle="bold"
        >
    </TextView>

    <EditText
        android:id="@+id/txtPassLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        >
    </EditText>

    <TextView
        android:id="@+id/lblResetPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:textColor="@color/azul"
        android:text="@string/olvidecontra"
        android:textSize="10sp"
        android:textStyle="bold"
        >
    </TextView>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="240dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/white"
        android:text="@string/login"
        >

    </Button>

    <TextView
        android:id="@+id/lblRegistrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="40dp"
        android:textColor="@color/azul"
        android:text="Don't have acount...Create"
        android:textSize="10sp"
        android:textStyle="bold"
        android:clickable="true"
        >
    </TextView>

  </LinearLayout>