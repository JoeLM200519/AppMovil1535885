<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/fondo_total"
    android:orientation="vertical">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/dd"
        android:layout_marginStart="240dp"
        android:layout_marginTop="55dp"
        >
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/azul"
        android:text="REGISTER"
        android:textSize="40sp"
        android:textStyle="bold"
        >

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/azul"
        android:text="NAME"
        android:textSize="15sp"
        android:textStyle="bold"
        >
    </TextView>

    <EditText
        android:id="@+id/txtNameRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:hint="Ingresar Nombre"
        android:inputType="text"
        >
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/azul"
        android:text="MOBIL NUMBER"
        android:textSize="15sp"
        android:textStyle="bold"
        >
    </TextView>

    <EditText
        android:id="@+id/txtTelefonoRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:hint="Ingresar numero"
        android:inputType="number"
        android:maxLength="9"
        >
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/azul"
        android:text="EMAIL"
        android:textSize="15sp"
        android:textStyle="bold"
        >
    </TextView>

    <EditText
        android:id="@+id/txtEmailRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        >
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/azul"
        android:text="@string/passwordtitulo"
        android:textSize="15sp"
        android:textStyle="bold"
        >
    </TextView>

    <EditText
        android:id="@+id/txtPassRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:hint="@string/password"
        android:inputType="textPassword"
        >
    </EditText>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="2"
        android:layout_margin="40dp">

        <Button
            android:id="@+id/btnIniciarRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:backgroundTint="@color/naranja"
            android:textColor="@color/white"
            android:text="SIGNUP"
            >
        </Button>

        <Button
            android:id="@+id/btncancelarregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_column="1"
            android:layout_row="0"
            android:backgroundTint="@color/naranja"
            android:textColor="@color/white"
            android:text="CANCELAR"
            >
        </Button>

        <Button
            android:id="@+id/btnLimpiarRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_column="2"
            android:layout_row="0"
            android:backgroundTint="@color/naranja"
            android:textColor="@color/white"
            android:text="LIMPIAR"
            >
        </Button>

        <TextView
            android:id="@+id/lblcancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/azul"
            android:layout_column="2"
            android:layout_row="1"
            android:text="Already have an acount?Sing in"
            android:textSize="8sp"
            android:textStyle="bold"
            >
        </TextView>


    </GridLayout>





</LinearLayout>